syntax = "v1"

import (
	"types/product_types.api"
)

@server (
	//     jwt: Auth
	group: product
	prefix:     /api/product
	middleware: RespMiddleware
)
service sapmall {
	@doc "分页查询多个产品"
	@handler products
	post /products (ListProductsReq) returns (ListProductsResp)

	@doc "查询产品详细信息"
	@handler getProductDetails
	post /getProductDetails (GetProductReq) returns (GetProductResp)
}
